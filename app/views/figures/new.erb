<h1>New Figure</h1>


<form action="/figures" method="POST">
	<lable>Name: </lable>
	<input type="text" id="figure_name" name="figure[name]"><br><br>

	<label>Titles:</label><br>
    <% Title.all.each do |title| %>
      <label><%= title.name %></label>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"><br>
    <% end %><br>

 	<label>Create New Title: </label>
  	<input type="text" id="new_title" name="title[name]"><br><br>

  	<label>Landmarks:</label><br>
    <% Landmark.all.each do |landmark| %>
      <label><%= landmark.name %></label>
      <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
    <% end %><br>

 	<label>Create New Landmark:</label><br>
 	<label>Name: </label>
  	<input type="text" id="new_landmark" name="landmark[name]"><br>
 	<label>Year: </label>
  	<input type="text" name="landmark[year_completed]"><br><br>
  	
  	<input type="submit" value="Create New Figure">

</form>